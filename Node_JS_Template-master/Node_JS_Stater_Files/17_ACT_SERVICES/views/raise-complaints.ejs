      <!-- Complaints Form -->
      <div class="container my-4">
        <div class="row">
          <div class="col-md-6 m-auto">
            <div class="card">
              <div class="card-header bg-danger text-white text-center">
                <h3>Raise Complaints</h3>
              </div>
              <div class="card-body bg-light">
                <form action="/complain" method="post">
                  <div class="form-group">
                    <input required type="text" class="form-control" placeholder="Account Holder Name" name="username">
                  </div>
                  <div class="form-group">
                    <input required type="number" class="form-control" placeholder="Account Number" name="account">
                  </div>
                  <div class="form-group">
                    <input required type="email" class="form-control" placeholder="Customer Email" name="email">
                  </div>
                  <div class="form-group">
                    <input required type="text" class="form-control" placeholder="Customer Location" name="location">
                  </div>
                  <div class="form-group">
                    <select required class="form-control" name="complaintType">
                      <option value="">Select Your Complaint Type</option>
                      <option value="Slow Internet Speed">Slow Internet Speed</option>
                      <option value="Issue with Router">Issue with Router</option>
                      <option value="Payment Issue">Payment Issue</option>
                      <option value="Relocation Request">Relocation Request</option>
                      <option value="Other Complaint">Other Complaint</option>
                    </select>
                  </div>
                  <div class="form-group">
                    <textarea required class="form-control" rows="4" placeholder="Complaint Description" name="description"></textarea>
                  </div>
                  <div class="text-center">
                    <input type="submit" value="Raise Complaint" class="btn btn-danger">
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>

